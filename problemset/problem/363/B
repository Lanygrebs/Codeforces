#include <bits/stdc++.h>
#include <iostream>
using namespace std;


int main(){

    int n,k;
    cin>>n;
    cin>>k;
    int h;
    int arr[n];
    for(int i=0;i<n;i++)
        {
            cin>>h;
            arr[i]=h;
        }
    for(int m=0;m<n-1;m++)
        {
            arr[m+1]+=arr[m];
            //cout<<arr[m]<<endl;
        }
    int index=0;

    if(n!=k)
    {

        int sum=arr[k-1];
        for(int j=1;j<n-k;j++)
        {
            if (sum>(arr[j+k-1]-arr[j]))

            {
                index=j;
                sum=(arr[j+k]-arr[j]);

            }
        }
    }
    cout<<index<<endl;
    return 0;
}
